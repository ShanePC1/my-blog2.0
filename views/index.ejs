<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Blog</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Recent Posts</h1>
    <% if (posts.length > 0) { %>
      <ul>
        <% posts.forEach((post, index) => { %>
          <li>
            <a href="/post/<%= index %>"><%= post.title %></a> - <%= post.date.toDateString() %>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No posts yet!</p>
    <% } %>
  </div>
</body>
</html>
